<UserControl
    x:Class="TicTacToe.NameEntry"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Padding="10" Width="350" Height="200">
    <Grid>
        <Label Content="Enter Your Name Below To Save Your Score" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Center" Height="24" Margin="0,50,0,0" TextWrapping="Wrap" Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="200"/>
        <Button Content="Submit Score" HorizontalAlignment="Center" VerticalAlignment="Center" Command="{Binding Submit}" Height="30" Width="100" Margin="0,75,0,0"/>
    </Grid>
</UserControl>
